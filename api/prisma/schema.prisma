generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id Int @id @default(autoincrement())
  title String
  authorId Int

  author Author @relation(fields: [authorId], references: [id])

  @@map("books")
}

model Author {
  id Int @id @default(autoincrement())
  name String

  books Book[]

  @@map("authors")
}
